 <resource methods="GET" uri-template="/employee/{employeeID}/Attendance*">
      <inSequence onError="ErrorSequence">
         <property name="FORCE_ERROR_ON_SOAP_FAULT" value="true"></property>
         <property name="FromDate" expression="$url:FromDate"></property>
         <property name="ToDate" expression="$url:ToDate"></property>
         <log level="custom">
            <property name="GET Employee Attendance Log: " expression="get-property('uri.var.employeeID')"></property>
         </log>
         <payloadFactory media-type="xml">
            <format>
               <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/" xmlns:dat="http://ws.wso2.org/dataservice">
                  <soapenv:Header></soapenv:Header>
                  <soapenv:Body>
                     <dat:AttendanceOperation>
                        <dat:FromDate>$1</dat:FromDate>
                        <dat:ToDate>$2</dat:ToDate>
                        <dat:EmployeeId>$3</dat:EmployeeId>
                     </dat:AttendanceOperation>
                  </soapenv:Body>
               </soapenv:Envelope>
            </format>
            <args>
               <arg evaluator="xml" expression="get-property('FromDate')"></arg>
               <arg evaluator="xml" expression="get-property('ToDate')"></arg>
               <arg evaluator="xml" expression="get-property('uri.var.employeeID')"></arg>
            </args>
         </payloadFactory>
         <header name="Action" value="urn:AttendanceOperation"></header>
         <send>
            <endpoint key="DSS_Attendance_EP"></endpoint>
         </send>
      </inSequence>
      <outSequence>
         <xslt key="attribute_remove_xslt"></xslt>
         <property name="messageType" value="application/json" scope="axis2"></property>
         <send></send>
      </outSequence>
   </resource>